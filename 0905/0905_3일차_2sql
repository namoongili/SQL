-- select s.name "STU_NAME", p.name "PROF_NAME"
select s_id, s_name, s_grade, teacher_id, weekday, start_h, end_h
from tbl_course_300;

select s_id "과목코드", s_name "과목명", s_grade "학점", teacher_id "담당강사", weekday "요일", start_h "시작시간", end_h "종료시간"
from tbl_course_300 tc 
join tbl_lecturer_300 tl
on tc.teacher_id = tl.t_id;

select teacher_id, count(teacher_id)
from tbl_course_300;



-----------------
select deptno, avg(nvl(sal,0)) "AVG"
from emp
group by deptno;
